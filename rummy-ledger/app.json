{
  "expo": {
    "name": "Rummy Ledger",
    "slug": "rummy-ledger",
    "description": "A modern mobile scorekeeper for Rummy games with real-time scoring, game history, and intuitive player management.",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rummyledger",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#1E3A8A",
    "backgroundColor": "#ffffff",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "githubUrl": "https://github.com/yourusername/rummy-ledger",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rummyledger.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app does not use the camera.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone.",
        "NSLocationWhenInUseUsageDescription": "This app does not use location services.",
        "UIBackgroundModes": ["background-processing"],
        "ITSAppUsesNonExemptEncryption": false
      },
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      }
    },
    "android": {
      "package": "com.rummyledger.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "VIBRATE"
      ],
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "name": "Rummy Ledger",
      "shortName": "Rummy Ledger",
      "lang": "en",
      "scope": "/",
      "themeColor": "#1E3A8A",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": "/"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true,
            "minSdkVersion": 23
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
